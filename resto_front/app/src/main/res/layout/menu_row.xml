<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/menu_prix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/menu_name"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/menu_name"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="-3dp" />

    <Button
        android:id="@+id/menu_button_delete"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:background="@drawable/button_border"
        android:drawableLeft="@drawable/ic_delete_forever_black_24dp"
        android:text="Supprimer"
        android:textColor="#FFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_name" />

    <Button
        android:id="@+id/menu_button_update"
        android:layout_width="99dp"
        android:layout_height="49dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/button_border"
        android:drawableLeft="@drawable/ic_edit_black_24dp"
        android:text="Modifier"
        android:textColor="#FFF"
        app:layout_constraintStart_toEndOf="@+id/menu_button_delete"
        app:layout_constraintTop_toBottomOf="@+id/menu_name" />

</android.support.constraint.ConstraintLayout>