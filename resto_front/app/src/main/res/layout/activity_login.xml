<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark" android:id="@+id/username">


    <EditText
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Email"
        android:background="@drawable/arrondir_edittext_register_login"
        android:layout_marginEnd="8dp"
        android:paddingLeft="16dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
        android:id="@+id/login_email_editText"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/login_password_editText" android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/login_email_editText"
        app:layout_constraintStart_toStartOf="@+id/login_email_editText" app:layout_constraintEnd_toEndOf="@+id/login_email_editText"
        android:hint="Mot de passe"
        android:background="@drawable/arrondir_edittext_register_login"
        android:paddingLeft="16dp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:background="@color/colorPrimary"
        android:text="Connexion"
        app:layout_constraintEnd_toEndOf="@+id/login_password_editText"
        app:layout_constraintStart_toStartOf="@+id/login_password_editText"
        app:layout_constraintTop_toBottomOf="@+id/login_password_editText" />

    <TextView
        android:id="@+id/register_label"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginTop="20dp"
        android:text="S'inscrire ?"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="@+id/login_button"
        app:layout_constraintStart_toStartOf="@+id/login_button"
        app:layout_constraintTop_toBottomOf="@+id/login_button" />

    <Button
        android:id="@+id/affiche_restaurant_button"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="200dp"

        android:background="@color/colorPrimary"
        android:text="Restaurant"
        app:layout_constraintEnd_toEndOf="@+id/register_label"
        app:layout_constraintStart_toStartOf="@+id/register_label"
        app:layout_constraintTop_toBottomOf="@+id/register_label" />

</android.support.constraint.ConstraintLayout>